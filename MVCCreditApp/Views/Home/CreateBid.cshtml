
@{
    ViewBag.Title = "CreateBid";
}

<h3>Существующие заявки</h3>
<table class="table">
    <tr>
        <th>Имя</th>
        <th>Тип кредита</th>
    </tr>
    @foreach (var c in ViewBag.Bids)
    {
        <tr>
            <td>@c.CustomerName</td>
            <td>@c.CreditHead</td>
        </tr>
    }
</table>
<h3>Форма подачи заявки по программам кредитования</h3>
<form method="post" action="">
    <table class="table">
        <tr>
            <td><p>Введите свое имя </p></td>
            <td><input type="text" name="CustomerName" /></td>
        </tr>
        <tr>
            <td><p>Выберите из списка тип кредита :</p></td>
            <td>
                <select name="CreditHead">
                    @foreach (var cr in ViewBag.Credits)
                    {
                        <option>@cr.Head</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="Отправить" /></td>
            <td></td>
        </tr>
    </table>
</form>
