@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Credit App</h1>
    <p class="lead">This App is the easiest way to submit credit bid.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h3>Программы кредитования</h3>
        <table class="table-bordered">
            <tr>
                <th><p>Тип кредита</p></th>
                <th><p>Период кредитования</p></th>
                <th><p>Максимальная сумма</p></th>
                <th><p>Ставка %</p></th>
            </tr>
            @foreach (var c in ViewBag.Credits)
            {
                <tr>
                    <td><p>@c.Head</p></td>
                    <td><p>@c.Period</p></td>
                    <td><p>@c.Amount</p></td>
                    <td><p>@c.Rate %</p></td>
                </tr>
            }
        </table>
        <p>
            <a class="btn btn-primary btn-lg" href="/Home/CreateBid">Подать заявку на получение&raquo;</a>
        </p>
    </div>
</div>