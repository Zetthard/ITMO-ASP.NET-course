@model ExamScoreSystem.Models.Course

@{
    ViewBag.Title = "CourseDetails";
}

<h2>@Model.CourseName</h2>

<div>
    <table class="table-bordered">
        <tr>
            <th>ФИО студента</th>
            <th>Оценка</th>
            <th></th>
        </tr>
        @foreach (var exam in Model.Exams) //ideally it's more correct to iterate through students, not exams.
        {
            <tr>
                <td>@Html.DisplayFor(e => exam.Student.FullName)</td>
                <td>
                    @Html.DisplayFor(e => exam.Mark)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditExam", new { sId = exam.StudentId, cId = exam.CourseId } )
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Courses") |
    @Html.ActionLink("Add new", "AddExam", new { CourseId = Model.CourseId })
</p>