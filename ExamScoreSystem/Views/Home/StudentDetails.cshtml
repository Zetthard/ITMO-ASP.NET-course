@model ExamScoreSystem.Models.Student

@{
    ViewBag.Title = "StudentDetails";
}

<h2>@Model.FullName</h2>

<div>
    <table class="table-bordered">
        <tr>
            <th>Курс</th>
            <th>Оценка</th>
        </tr>
        @foreach (var exam in Model.Exams)
        {
            <tr>
                <td>@Html.ActionLink(exam.Course.CourseName, "CourseDetails", new { id = exam.CourseId })</td>
                <td>@Html.DisplayFor(e => exam.Mark)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Students")
</p>
