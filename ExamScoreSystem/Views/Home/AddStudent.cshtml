@model ExamScoreSystem.Models.Student

@{
    ViewBag.Title = "Add Student";
}

<h3>Форма добавления студента</h3>
<form method="post" action="">
    <table class="table">
        @Html.ValidationSummary(true)
        <tr>
            <td><p>Имя студента</p></td>
            <td>
                @Html.TextBoxFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName, "First Name is required")
            </td>
        </tr>
        <tr>
            <td><p>Фамилия студента</p></td>
            <td>
                @Html.TextBoxFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName, "Last Name is required")
            </td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Сохранить" /></td>
        </tr>
    </table>
</form>
