@model IEnumerable<ExamScoreSystem.Models.Student>

@{
    ViewBag.Title = "Students";
}
<h2>@ViewBag.Title</h2>

<div>
    <table class="table-bordered">
        <tr>
            <th>Имя и Фамилия</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ToString()</td>
                <td>@Html.ActionLink("Details", "StudentDetails", new { id = item.StudentId })</td>
            </tr>
        }
    </table>
    <br />
    <p><a class="btn btn-primary btn-default" href="/Home/AddStudent">Add new student&raquo;</a></p>
</div>
